<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F2F5F8">
    <RelativeLayout
        android:id="@+id/set_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo">

        <Button
            android:id="@+id/set_back"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_button" 
            android:textColor="#FFFFFF"
            android:text="返回"/>

    </RelativeLayout> 
    
    <CheckBox
        android:id="@+id/check"  
        android:layout_width="wrap_content"   
        android:layout_height="wrap_content"   
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textColor="#4B4B4B"
        android:text="答题是否自动前进" /> 
    
    <Button
            android:id="@+id/clean_result"
            android:layout_width="260dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/set_button1"
            android:layout_below="@id/check"
            android:textColor="#4b4b4b"
            android:textSize="17dp"
            android:layout_marginTop="25dp"
            android:text="清空模拟考试成绩" />
    <!-- style="@style/button_text" -->
    <Button
            android:id="@+id/clean_myerror"
            android:layout_width="260dip"
            android:layout_height="50dip"
            android:textColor="#4b4b4b"
            android:textSize="17dp"
            android:layout_below="@id/clean_result"
            android:layout_centerHorizontal="true"
            android:background="@drawable/set_button1"
            android:layout_marginTop="25dp"
            android:text="清空我的错题数据" />
    <Button
            android:id="@+id/clean_exam"
            android:layout_width="260dip"
            android:layout_height="50dip"
            android:layout_marginTop="25dp"
            android:textColor="#4b4b4b"
            android:textSize="17dp"
            android:layout_below="@id/clean_myerror"
            android:background="@drawable/set_button1"
            android:layout_centerHorizontal="true"
            android:text="清空我的章节练习数据" />
    <Button
            android:id="@+id/clean_all"
            android:layout_width="260dip"
            android:layout_height="50dip"
            android:background="@drawable/set_button2"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/clean_exam"
            android:layout_marginTop="25dp"
            android:text="清空以上所有数据" />

</RelativeLayout>