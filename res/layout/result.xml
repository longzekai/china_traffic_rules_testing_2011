<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F2F5F8" >
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo">

        <Button
            android:id="@+id/exam_back"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_button"
            android:textColor="#FFFFFF"
            android:text="返回"/>

    </RelativeLayout>

	<RelativeLayout
	    android:id="@+id/layout_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/layout_top" >

	    <TextView
	        android:id="@+id/result_info"
	        style="@style/exam_question"
	        android:layout_width="240dip"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"/>

	    <Button
	        android:id="@+id/error_exam"
	        android:layout_width="160dip"
	        android:layout_height="35dip"
	        android:background="@drawable/blue_button"
	        android:layout_below="@id/result_info"
	        android:layout_centerHorizontal="true"
	        android:textColor="#FFFFFF"
	        android:textSize="16.67dp"
	        android:text="查看错题" />

	    <Button
	        android:id="@+id/restart_exam"
	        android:layout_width="160dip"
	        android:layout_height="35dip"
	        android:background="@drawable/blue_button"
	        android:layout_centerHorizontal="true"
	        android:textColor="#FFFFFF"
	        android:textSize="16.67dp"
	        android:layout_below="@+id/error_exam"
	        android:layout_marginTop="25dp"
	        android:text="重新答题" />

	    <Button
	        android:id="@+id/share"
	        android:layout_width="160dip"
	        android:layout_height="35dip"
	        android:background="@drawable/blue_button"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/restart_exam"
	        android:layout_marginTop="25dp"
	        android:textColor="#FFFFFF"
	        android:textSize="16.67dp"
	        android:text="分享" />

	</RelativeLayout>

</RelativeLayout>