<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/error_answer"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="10sp" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:orientation="vertical">
	<TextView 
		    android:id="@+id/answer_title" 
		    android:gravity="center"
			android:textStyle="italic|bold"
			android:textSize="20dip" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
    <ImageView
	        android:id="@+id/answer_image"
	        android:layout_width="wrap_content"
	        android:layout_height="65dip"
	        android:paddingTop="5dip"
	        android:layout_below="@+id/answertitle"
	        android:layout_centerVertical="true" />

    <TextView 
		    android:id="@+id/answer_text" 
		    android:gravity="center"
			android:textStyle="italic|bold"
			android:textSize="20dip" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
    <TextView
	        android:id="@+id/me_errornum"
	        android:layout_width="70dip"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/answer_text"/> 
	<Button
	        android:id="@+id/me_delete"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_below="@+id/me_errornum"
            android:layout_alignParentRight="true"
            android:text="隐藏本题"/>
    
</LinearLayout>