<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/v2_bg" android:state_window_focused="false"/>
    <item android:state_focused="true" android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#194fdc" android:startColor="#4084f3" />
        </shape></item>
    <item android:state_focused="false" android:state_pressed="true"><shape>
            <gradient android:endColor="#194fdc" android:startColor="#4084f3" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <gradient android:endColor="#194fdc" android:startColor="#4084f3" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:endColor="#194fdc" android:startColor="#4084f3" />
        </shape></item>

</selector>